<templates id="template_orderline" xml:space="preserve">
        <t t-name="partner-list" t-inherit="point_of_sale.partner-list"
           t-inherit-mode="extension" owl="1">
            <xpath expr="//th[hasclass('partner-line-email')]"
                   position="after">
                <t t-if="props.line.product.owner_id">
                    <div>
                        <span>Owner:</span>
                        <t t-esc="props.line.product.owner_id[1]"/>
                    </div>
                </t>
            </xpath>
        </t>
    </templates>
